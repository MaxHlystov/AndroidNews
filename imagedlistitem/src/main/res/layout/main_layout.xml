<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/layout_imaged_text__image"
        android:layout_width="@dimen/key_icon_size"
        android:layout_height="@dimen/key_icon_size"
        android:layout_marginEnd="@dimen/half_margin"
        android:contentDescription="@string/item_image_description"
        android:scaleType="fitCenter"
        tools:contentDescription="@tools:sample/lorem"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/layout_imaged_text__text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/normal_text_size"
        tools:text="@tools:sample/lorem/random" />
</LinearLayout>